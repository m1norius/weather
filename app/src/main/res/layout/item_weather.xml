<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/itemColor"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_txt_weather_temp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="200dp"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="TEMP" />

        <ImageView
            tools:background="@android:color/white"
            android:id="@+id/id_img_weather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/id_txt_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_txt_weather_temp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/id_txt_weather_temp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="200dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Description" />

        <TextView
            android:id="@+id/id_txt_weather_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/id_txt_weather_description"
            android:layout_below="@+id/id_txt_weather_description"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="200dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Wind" />

        <TextView

            android:id="@+id/id_txt_weather_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/id_txt_weather_temp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="200dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Time" />

    </RelativeLayout>

</android.support.v7.widget.CardView>